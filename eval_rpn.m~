function val = eval_rpn(expr)

    stack = []; 

    for i = 1:length(expr)
        % push numeric digits onto stack. 
        if (isstrprop(expr(i), 'digit'))
           stack = [ stack, str2num(expr(i)) ]; 
        else
            % pop operands from stack (only considering binary ops). 
            operands = stack( (end-1):end ); 
            stack = stack(1:(end-2));
            
            % evaluate
            switch (expr(i))
                case '+'
                    result = operands(1) + operands(2); 
                case 'x'
                    result = operands(1) * operands(2); 
                % overload. 
                case '*'
                    result = operands(1) * operands(2); 
                    break
                case '-' 
                    result = operands(1) - operands(2); 
                    break
                case '/' 
                    result = operands(1) / operands(2); 
                    
            end
            % push back onto stack 
            stack = [stack, result]; 
        end
    end
    
    % This should work. 
    val = stack(1); 
end
